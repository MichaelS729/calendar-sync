<div id='main' style="width:50%; margin-left:25%; margin-right:25%; min-width:30em;">
  <h1 class='title' style="border-bottom: 4px solid #A6C55F; border-top: 0px;"></h1>
  <div style='padding: 1em;'>





    <h2 style="font-weight:200;">Sign up</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>

      <div class="field">
        <%= f.email_field :email, autofocus: true, class: 'edit_text_field', placeholder: 'Email', label: 'email', style: 'width:20em;' %>
      </div>

      <br/>

      <div class="field">
        <% if @validatable %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "off", class: 'edit_text_field', placeholder: 'Password', label: 'password', style: 'width:20em;' %>
      </div>

      <br/>

      <div class="field">
        <%= f.password_field :password_confirmation, autocomplete: "off", class: 'edit_text_field', placeholder: 'Confirm Password', label: 'password_confirmation', style: 'width:20em;' %>
      </div>

      <br/>

      <div class="actions">
        <%= f.submit "Sign up", class: 'button' %>
      </div>
    <% end %>

    <br/>
    <br/>

    <%= render "users/shared/links" %>




    <br/>
    <br/>
    <br/>
    <br/>
    <br/>
  </div>
  <h1 class="title" style= "border-top: 4px solid #A6C55F; border-bottom: 0px;"></h1>
</div>
