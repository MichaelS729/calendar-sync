#e_name.colored
  .field Name
  = text_field :event, 'name', placeholder: 'Name', class: 'edit_text_field'

#e_image
  .field Image Upload
  = file_field :event, :image, id: 'image', accept: 'image/*'

#e_start_time.colored
  .field Start Time
  = datetime_select :event, :start, default: default_time, datetime_separator: '', time_separator: '', ampm: true

#e_end_time
  .field End Time
  = datetime_select :event, :end,  default: default_time, datetime_separator: '', time_separator: '', ampm: true

= hidden_field :event, :organization, value: Meetup::GROUP_NAME

#e_venue_name.colored
  = check_box_tag 'venue_check'
  = label_tag 'venue_check', 'Enable Venue', class: 'field'
  #venue_label.field Venue Name
  = text_field :event, :venue_name, class: 'edit_text_field'

#e_location
  #location_label.field Location
  = text_field_tag :autocomplete, nil, placeholder: 'Enter your address', onFocus: 'initialize();', class: 'edit_text_field'

  #e_address
    .field Street Address
    = text_field :event, 'st_number', placeholder: 'not required'
    = text_field :event, 'st_name'

  #e_city
    .field City
    = text_field :event, 'city', class: 'medium_edit_text_field'

  #e_state
    .field State
    = text_field :event, 'state', class: 'short_edit_text_field'

  #e_zip
    .field Zip
    = text_field :event, 'zip', size: '6', class: 'short_edit_text_field', placeholder: 'not required'

  #e_country
    .field Country
    = text_field :event, 'country', class: 'short_edit_text_field'

  #map

#e_how_to_find_us.colored
  .field How to find us
  = text_area :event, 'how_to_find_us', :cols =>'40', :rows => '2', class: 'edit_text_field'

#e_description
  .field Description
  = text_area :event, 'description', :cols =>'40', :rows => '10', class: 'edit_text_field tinymce'

= tinymce_assets
.colored= tinymce
