#image
  = image_tag @event.image.url(:medium)
<br/>

#name
  .left
    %p Title
  .right
    %p
      = @event.name
  %div{:style=>"clear:both;"}

#date_time
  .left
    %p Time
  .right
    %p
      = @timePeriod
  %div{:style=>"clear:both;"}

#location
  .left
    %p Location
  .right
    %p
      = @event.location
    <br/>
    %p
      <i>map coming soon!</i>
  %div{:style=>"clear:both;"}
<br/>

#description
  %p 
    != @event.description
<br/>

#find_us
  %p How to find us: 
  %p 
    != @event.how_to_find_us
<br/>

#rsvp
  %p Check out who's going!
  -# maybe we should put a link to an rsvp form page or popup...
  %table#attendees
    %thead
      %tr
        %th Name
    %tbody
      - @non_anon_guests_by_first_name.each do |guest|
        %tr
          %td= guest.first_name
  <br/>
  %p RSVP Now!
  = form_tag guests_path, id: 'rsvp' do
    = hidden_field_tag :event_id, @event.id

    %div= label :guest, :first_name, 'First Name'
    #first_name.edit_text_field= text_field :guest, :first_name

    %div= label :guest, :last_name, 'Last Name'
    #last_name.edit_text_field= text_field :guest, :last_name

    %div= label :guest, :phone, 'Phone'
    #phone.edit_text_field= text_field :guest, :phone

    %div= label :guest, :email, 'Email'
    #email.edit_text_field= text_field :guest, :email

    %div= label :guest, :address, 'Address'
    #address.edit_text_field= text_area :guest, :address, :cols =>'20', :rows => '10'

    %p Do you want to remain anonymous?
    %div
      = hidden_field :guest, :is_anon, :value => nil
      %div{:style=>"float:left; position:relative;"}
        = label :guest, :is_anon, 'Yes'
        = radio_button :guest, :is_anon, true
      %div{:style=>"float:right; position:relative;"}
        = label :guest, :is_anon, 'No'
        = radio_button :guest, :is_anon, false
      %div{:style=>"clear:both;"}

    %p= submit_tag "Submit", :class=>'button'
<br/>
<br/>

- if user_signed_in?
  %div
    %div{:style=>"float:left;"}
      %input{type: 'button', id: 'edit_event', value: 'Edit', class: 'button'}
    %div{:style=>"float:right;"}
      %input{type: 'button', id: 'delete_event', value: 'Delete', class: 'button'}
      =# button_to 'Delete', event_path(@event), :class => 'button', :method => :delete, :confirm => 'Are you sure?'
    %div{:style=>"clear:both;"}
