-# in app/views/movies/show.html.haml
%div= @message

%h1 Details about #{@event.name}
%ul#details
  %li#name
    Name:
    = @event.name
  %li#organization
    Organization:
    = @event.organization
  %li#location
    Location:
    = @event.location
  %li#date
    Date:
    = @event.start.strftime("%B %d, %Y")
  %li#time
    Time:
    = @event.start.strftime("%l:%M%P")

%h3 Description:

%p#description= @event.description

%div= link_to 'Edit', edit_event_path(@event)

%h2 Here's what's happening!
-# Photos here

%h2 Check out who's going!
%table#attendees
  %thead
    %tr
      %th Name
      %th Phone Number
      %th Email
      %th Address
  %tbody
    - @non_anon_users_by_last_name.each do |user|
      %tr
        %td= user.first_name + ' ' + user.last_name
        %td= user.phone
        %td= user.email
        %td= user.address

%h2 RSVP Now!
= form_tag users_path, id: 'rsvp' do
  = hidden_field_tag :event_id, @event.id

  %div= label :user, :first_name, 'First Name'
  %div#first_name= text_field :user, :first_name

  %div= label :user, :last_name, 'Last Name'
  %div#last_name= text_field :user, :last_name

  %div= label :user, :phone, 'Phone'
  %div#phone= text_field :user, :phone

  %div= label :user, :email, 'Email'
  %div#email= text_field :user, :email

  %div= label :user, :address, 'Address'
  %div#address= text_area :user, :address, :cols =>'40', :rows => '10'

  %div Do you want to remain anonymous?
  = hidden_field :user, :is_anon, :value => nil
  = label :user, :is_anon, 'Yes'
  = radio_button :user, :is_anon, true
  = label :user, :is_anon, 'No'
  = radio_button :user, :is_anon, false

  %p= submit_tag "Submit"

= button_to 'Delete', event_path(@event), :method => :delete, :confirm => 'Are you sure?'
= link_to 'Back to calendar', events_path
