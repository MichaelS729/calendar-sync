%h2 Event Details

%ul#details
  %li#name
    Name:
    = @event.name
  %li#organization
    Organization:
    = @event.organization
  %li#date
    Date:
    = @event.formatted_date
  %li#time
    Time:
    = @event.formatted_time
  %li#location
    Location:
    = @event.location

%h3 Description:

%p#description= @event.description

= link_to 'Back to calendar', events_path
