
#panel_header
  %h2 Matched Events
-#%h1.title{:style => "border_top: 4px solid #ff9900; border-top: 0px;"}
= form_tag pull_third_party_events_path, method: :post, format: :js, remote: true do
  %table#matched_events
    %thead
      %tr
        %th Select
        %th Name
        %th Group
        %th Start Time
        %th End Time
        %th Location
        %th Meetup Link

    %tbody
      - if @events
        - @events.each do |event|
          %tr
            - meetup_id = event.meetup_id
            %td= check_box_tag "event" + (meetup_id.nil? ? "" : meetup_id)
            - name = event.name
            - id = event.id
            %td.names= id ? (link_to name, event_path(id)) : name
            %td= (organization = event.organization) ? organization : 'N/A'
            %td= (start = event.format_start_date) ? start : 'N/A'
            %td= (end_date = event.format_end_date) ? end_date : 'N/A'
            %td= (location = event.location) ? location : 'N/A'
            - if (url = event.url) =~ /www.meetup.com/
              %td= link_to 'go', url

  </br>
  %div{style: 'float:right'}= submit_tag 'Add Events', class: 'button'

<br/>
