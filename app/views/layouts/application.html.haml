!!! 5
%html
  %head
    %title Calendar
    = stylesheet_link_tag 'application'
    = stylesheet_link_tag 'fullcalendar'
    = javascript_include_tag 'application'
    = javascript_include_tag 'jquery.min'
    = javascript_include_tag 'moment.min'
    = javascript_include_tag 'fullcalendar'
    = csrf_meta_tags

  %body{:style => "width:75%; padding-left:12.5%; padding-right:12.5%; min-width: 50em;"}
    %h1.title Nature in the City [header placeholder]
    %main
      - if flash[:notice]
        %h3#notice.message= flash[:notice]
      - elsif flash[:warning]
        %h3#warning.message= flash[:warning]

      = yield
      = javascript_include_tag 'mycalendar'

    </br></br></br></br></br>
    %h1.title{:style => "border-top: 4px solid #FFA721; border-bottom: 0;"} [footer placeholder]
