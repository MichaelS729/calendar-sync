%h4{style: 'text-align:center; font-weight:200'} Edit Event
= form_for @event, :url => event_path(@event), id: 'update_event', format: :js,  remote: true, :multipart => true, authenticity_token: true do |f|
  -# this path does an ajax post to the event controller action update
  #e_image
    %p.field Image Upload
    = f.file_field :image, :id => "image"
  = render partial: 'event_form', locals: {event: @event}
  <br/><br/>
  = submit_tag "Save Event", id: 'update', class: 'button', style: 'float:right;'
<br/>
